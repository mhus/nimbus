{
  "name": "@nimbus/root",
  "version": "2.0.0",
  "private": true,
  "description": "Nimbus Voxel Engine - Client 2.0",
  "scripts": {
    "build": "pnpm build:shared && pnpm build:server && pnpm build:client",
    "build:shared": "pnpm --filter @nimbus/shared build",
    "build:server": "pnpm --filter @nimbus/server build",
    "build:client": "pnpm --filter @nimbus/client build",
    "build:viewer": "pnpm build:shared && pnpm --filter @nimbus/client build:viewer",
    "build:editor": "pnpm build:shared && pnpm --filter @nimbus/client build:editor",
    "build:material_editor": "pnpm build:shared && pnpm --filter @nimbus/material_editor build",
    "dev:server": "pnpm --filter @nimbus/server dev",
    "dev:client": "pnpm --filter @nimbus/client dev",
    "dev:viewer": "pnpm --filter @nimbus/client dev",
    "dev:editor": "pnpm --filter @nimbus/client dev:editor",
    "dev:material_editor": "pnpm --filter @nimbus/material_editor dev",
    "start:server": "pnpm --filter @nimbus/server start",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
