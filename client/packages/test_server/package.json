{
  "name": "@nimbus/test_server",
  "version": "2.0.0",
  "description": "Nimbus Voxel Engine - Test Server",
  "type": "module",
  "main": "./dist/NimbusServer.js",
  "scripts": {
    "dev": "tsx watch src/NimbusServer.ts",
    "build": "tsc",
    "start": "node dist/NimbusServer.js",
    "clean": "rm -rf dist *.tsbuildinfo",
    "test": "jest --testPathIgnorePatterns=integration.test.ts --passWithNoTests",
    "test:integration": "TEST_SERVER_URL=http://localhost:3111 PORT=3111 jest integration.test.ts",
    "test:block": "tsx test-block-placement.ts",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@nimbus/shared": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.18.2",
    "open-simplex-noise": "^2.5.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.10",
    "jest": "^30.2.0",
    "node-fetch": "^3.3.2",
    "ts-jest": "^29.4.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
