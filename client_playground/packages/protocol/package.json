{
  "name": "@nimbus-client/protocol",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "generate": "pbjs -t static-module -w es6 -o src/generated/protocol.js proto/*.proto && pbts -o src/generated/protocol.d.ts src/generated/protocol.js"
  },
  "dependencies": {
    "@nimbus-client/core": "workspace:*",
    "protobufjs": "^7.4.0"
  },
  "devDependencies": {
    "typescript": "^5.7.3"
  }
}
